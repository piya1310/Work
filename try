interface ToastProps {
  content: string; // This prop can accept a string.
  onConfirm: () => void; // This prop is a function.
  onCancel: () => void; // This prop is a function.
}

const Toast: React.FC<ToastProps> = ({ content, onConfirm, onCancel }) => {
  return (
    <div className="toast">
      <p>{content}</p>
      <div className="toast-buttons">
        <button onClick={onConfirm}>OK</button>
        <button onClick={onCancel}>Cancel</button>
      </div>
    </div>
  );
};
