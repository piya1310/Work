<div className="custom-avatar-group">
  {row.users.slice(0, 3).map((user: RowUsers, index: number) => (
    <div key={index} className="user-avatar">
      {getAvatarLetters(user?.name).slice(0, 3)} {/* Display max 3 letters */}
    </div>
  ))}
  {/* Optionally show the overflow count if necessary */}
  {row.users.length > 3 && (
    <div className="overflow-avatar">
      +{row.users.length - 3}
    </div>
  )}
</div>
